{
  "name": "codeplot",
  "version": "1.0.0",
  "description": "Interactive CLI tool for feature planning and ADR generation using Gemini 2.5 Pro",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "codeplot": "./src/index.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "test:watch": "node --experimental-vm-modules node_modules/.bin/jest --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/.bin/jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.js *.md *.json",
    "format:check": "prettier --check src/**/*.js *.md *.json",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "commitlint": "commitlint --edit --last",
    "semantic-release": "semantic-release",
    "validate": "npm run lint && npm run format:check && npm run test"
  },
  "keywords": [
    "cli",
    "codeplot",
    "architecture",
    "adr",
    "feature-planning",
    "gemini",
    "ai",
    "planning",
    "development",
    "plotting"
  ],
  "author": "Matheus",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "chalk": "^5.3.0",
    "child_process": "^1.0.2",
    "commander": "^12.1.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^10.2.2",
    "ora": "^8.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "eslint": "^8.57.0",
    "husky": "^9.0.10",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.4",
    "prettier": "^3.2.5",
    "semantic-release": "^23.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/matheus/codeplot.git"
  },
  "homepage": "https://github.com/matheus/codeplot#readme",
  "bugs": {
    "url": "https://github.com/matheus/codeplot/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "src/",
    "README.md",
    "LICENSE"
  ]
}
