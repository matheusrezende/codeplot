{
  "name": "codeplot",
  "version": "1.5.1",
  "description": "Interactive CLI tool for feature planning and ADR generation using Gemini 2.5 Pro",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "codeplot": "./src/index.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "test:watch": "node --experimental-vm-modules node_modules/.bin/jest --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/.bin/jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.js *.md *.json",
    "format:check": "prettier --check src/**/*.js *.md *.json",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "commitlint": "commitlint --edit --last",
    "semantic-release": "semantic-release",
    "validate": "npm run lint && npm run format:check && npm run test",
    "audit:fix": "npm audit fix",
    "audit:check": "npm audit --audit-level=moderate",
    "security:check": "npm run audit:check && npm run lint",
    "outdated:check": "npm outdated",
    "deps:update": "npm update && npm audit fix"
  },
  "keywords": [
    "cli",
    "codeplot",
    "architecture",
    "adr",
    "feature-planning",
    "gemini",
    "ai",
    "planning",
    "development",
    "plotting"
  ],
  "author": "Matheus",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "chalk": "^5.3.0",
    "child_process": "^1.0.2",
    "commander": "^14.0.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^12.6.3",
    "ora": "^8.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.29.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "eslint": "^9.29.0",
    "husky": "^9.0.10",
    "jest": "^30.0.3",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.1.4",
    "prettier": "^3.2.5",
    "semantic-release": "^24.2.5"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/matheusrezende/codeplot.git"
  },
  "homepage": "https://github.com/matheusrezende/codeplot#readme",
  "bugs": {
    "url": "https://github.com/matheusrezende/codeplot/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "src/",
    "README.md",
    "LICENSE"
  ],
  "volta": {
    "node": "22.17.0",
    "npm": "10.9.2"
  }
}
